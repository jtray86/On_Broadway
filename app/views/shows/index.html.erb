<h1>On Broadway</h1>

<%=form_tag('/shows', method: :get) do %>
    <%=text_field_tag :search, params[:search]%>
    <%=submit_tag "Search 🔍"%>
<%end%>

    <%if flash[:message]%>  
            <p><%=flash[:message]%></p>
    <%end%>

<ul>
    <% @shows.each do |show| %>   
        <li>
            <%= link_to show.name, show_path(show) %> 
            <img src=<%=show.image%> alt=<%=show.name%> />    
        </li>
    <%end%>
</ul>


 
<div id="creativeindex" >
<h1>Creatives</h1>

<%=form_tag('/creatives', method: :get) do %>
    <p id="indexsearch" > Case Sensitive </p>
    <%=text_field_tag :search, params[:search]%>
    <%=submit_tag "Search 🔍"%>
<%end%>

    <%if flash[:message]%>
            <p><%=flash[:message]%></p>
    <%end%>
    <div class="list">
    <p id="feature"><strong>Featured Creatives</strong></p>
<ul>
    <% @creatives.sample(8).each do |creative| %>   
        <li>
            <%= link_to creative.name, creative_path(creative) %> 
            <img src=<%=creative.image%> alt=<%=creative.name%> />    
        </li>
    <%end%>
</ul>

</div>
</div>


